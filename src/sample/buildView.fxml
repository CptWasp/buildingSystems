<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.BuilderController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="450.0" prefWidth="640.0" style="-fx-background-color: #444;" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="WorksTextButton" layoutX="320.0" layoutY="316.0" mnemonicParsing="false" style="-fx-background-color: #333; -fx-background-radius: 20;" text="Добавить" textFill="WHITE" />
            <Label layoutX="187.0" layoutY="76.0" text="Работы в процессе - 0, завершенные работы - 1" textFill="WHITE" />
            <Button fx:id="quitButton" layoutX="551.0" layoutY="32.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="51.0" style="-fx-background-color: #333; -fx-background-radius: 20;" text="Выход" textFill="WHITE" />
            <TextField fx:id="WorksTextField" layoutX="23.0" layoutY="316.0" prefHeight="25.0" prefWidth="288.0" />
            <Button fx:id="WorksAdder" layoutX="458.0" layoutY="348.0" mnemonicParsing="false" style="-fx-background-color: #333; -fx-background-radius: 20;" text="Выполнена +1 работа" textFill="WHITE" />
            <TextField fx:id="id_fielder" layoutX="453.0" layoutY="319.0" promptText="ID" />
            <TableView fx:id="tableMF" layoutX="62.0" layoutY="100.0" prefHeight="200.0" prefWidth="514.0">
              <columns>
                <TableColumn fx:id="id_td" prefWidth="81.0" text="ID" />
                <TableColumn fx:id="comment_td" prefWidth="84.0" text="Comment" />
                  <TableColumn fx:id="status_td" prefWidth="88.0" text="Status" />
                  <TableColumn fx:id="user_td" prefWidth="84.0" text="User Name" />
                  <TableColumn fx:id="object_td" text="Object Name" />
                  <TableColumn fx:id="url_td" prefWidth="96.0" text="URL 3d object commit" />
              </columns>
            </TableView>
         </children>
    </AnchorPane>
  </children>
</VBox>
